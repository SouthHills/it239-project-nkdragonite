<button @onclick="SaveChanges">Save Changes</button>
@code {
    Part newPart = new();

    private async Task SaveChanges()
    {
        newPart.Id = DbContext.Parts.Max(p => p.Id) + 1;
        DbContext.Parts.Add(newPart);
        await DbContext.SaveChangesAsync();
        newPart = new Part();
    }


